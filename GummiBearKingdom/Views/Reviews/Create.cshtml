@model GummiBearKingdom.Models.Review

@{
	var id = ViewContext.RouteData.Values["id"];
}

<head>
	<meta name="viewport" content="width=device-width" />
	<title></title>
</head>
<body>

	<form asp-action="Create">
		<div class="create-form">
			<h4>Write a Review</h4>
			<hr />
			<input type="hidden" asp-for="ProductId" value="@id"/>
			<div class="form-group">
				<label asp-for="Author" class="col-md-2 "></label>
				<div class="col-md-10">
					<input asp-for="Author" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Content_Body" class="col-md-2 "></label>
				<div class="col-md-10">
					<input asp-for="Content_Body" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="rating" class="col-md-2 "></label>
				<div class="col-md-10">
					<input asp-for="rating" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-info" />
			</div>
		</div>
	</form>
	<div>
		<a asp-controller="Products" asp-action="Index">Back to List</a>
	</div>
</body>
