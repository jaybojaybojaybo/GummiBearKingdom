@model GummiBearKingdom.Models.Product


<head>
	<meta name="viewport" content="width=device-width" />
	<title></title>
</head>
<body>
	
	<form asp-action="Create">
		<div class="create-form">
			<h4>Product</h4>
			<hr />
			<div class="form-group">
				<label asp-for="Name" class="col-md-2 "></label>
				<div class="col-md-10">
					<input asp-for="Name" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="col-md-2 "></label>
				<div class="col-md-10">
					<input asp-for="Description" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="col-md-2 "></label>
				<div class="col-md-10">
					<input asp-for="Price" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Image" class="col-md-2 "></label>
				<div class="col-md-10">
				<input asp-for="Image" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId" class="col-md-2 "></label>
				<select asp-for="CategoryId" class="form-control col-md-10" asp-items="ViewBag.CategoryName"></select>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-info" />
			</div>
		</div>
	</form>
	<div>
		<a asp-action="Index">Back to List</a>
	</div>
</body>